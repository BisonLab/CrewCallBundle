        {{ form_start(new_form, {action:path('organization_add_person', {'id': organization.id }), 'attr': {'id':'addNewPersonForm'}}) }}
            {{ form_widget(new_form) }}
            <input id="submitAddNewPerson" type="submit" value="Create and add" />
        {{ form_end(new_form) }}
    </div>
</div>
