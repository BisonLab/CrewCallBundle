<div class="row">
    <div class="col-sm-6">
    {{ form_start(exists_form, {action:path('organization_add_person', {'access': 'ajax', 'id': organization.id }), 'attr': {'id':'addExistingPersonForm'}}) }}
        {{ form_widget(exists_form) }}
        <input type="hidden" name="username" id="username">
        <input id="submitAddExistingPerson" type="submit" value="Add" />
    {{ form_end(exists_form) }}
    </div>

    <div id="pfo_notfound" class="col-sm-6">
