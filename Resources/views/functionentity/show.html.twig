{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ functionEntity }}</h1>

    <table class="showTable">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ functionEntity.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ functionEntity.functiontype }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ functionEntity.description }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ functionEntity.statelabel }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('function_edit', { 'id': functionEntity.id }) }}"><button>Edit</button></a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
