{% extends 'base.html.twig' %}
{% block title %}Functions{% endblock %}

{% block body %}

    <div class="row">
    <div class="col-sm-6">
    <h1>Functions</h1>
    </div>
    <div class="col-sm-4">
    </div>
    <div class="col-sm-1" style="margin-top: 10px;">
    <a href="{{ path('function_new') }}"><button class="btn btn-dark mt-4 ml-3">New Function</button></a>
    </div>
    </div>

        <table id="sortable_table" class="table table-striped  table-sm">
        <thead class="thead-inverse">
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Descriptions</th>
                <th>State</th>
                <th>People</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for functionEntity in functionEntities %}
        <td><a href="{{ path('function_show', { 'id': functionEntity.id }) }}">{{ functionEntity.name }}</a></td>
        <td>{{ functionEntity.functiontypelabel }}</td>
        <td>{{ functionEntity.description }}</td>
        <td>{{ functionEntity.state }}</td>
        <td>
        {% for state, amount in functionEntity.countpeople({ 'by_state': true }) %}
        {{ state }}: {{ amount }}<br/>
        {% endfor %}
        </td>
        <td>
            <a href="{{ path('function_show', { 'id': functionEntity.id }) }}">show</a> - 
            <a href="{{ path('function_edit', { 'id': functionEntity.id }) }}">edit</a> - 
            <a href="{{ path('person_function', { 'function_id': functionEntity.id }) }}">people</a>
        </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
