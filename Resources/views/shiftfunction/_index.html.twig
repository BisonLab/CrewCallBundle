{% include 'CrewCallBundle:job:handling.html.twig' %}
{% include 'CrewCallBundle:shiftfunctionorganization:handling.html.twig' %}
<table id="shiftFunctionTable" class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>Function</th>
            <th>Amount Needed</th>
            <th>Amount Registered</th>
            <th>Amount Booked</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for shiftFunction in shiftFunctions %}
        <tr>
            <td><a href="{{ path('function_show', { 'id': shiftFunction.function.id }) }}">{{ shiftFunction.function.name }}</a></td>
            <td>{{ shiftFunction.amount }}</td>
            <td>
                {{ shiftFunction.jobs.count }}
                <a href="#" onClick="grabJobList({{ shiftFunction.id }});">List</a>
            </td>
            <td>{{ shiftFunction.booked }}</td>
            <td>
              <a href="{{ path('shiftfunction_show', { 'id': shiftFunction.id }) }}">Show</a>
                <a href="#" onClick="grabEditShiftFunctionForm({{ shiftFunction.id }});">Edit</a>
                <a href="#" onClick="grabJobList({{ shiftFunction.id }});">Jobs</a><br>
                <a href="#" onClick="grabJobList({{ shiftFunction.id }}); grabNewShiftFunctionOrganizationForm({{shiftFunction.id}});">Add crew from an organization</a>
            </td>
        </tr>
        <tr class="jobList" id="jobList_{{ shiftFunction.id }}">
        <td colspan="5">
        <div id="newShiftFunctionOrganization_{{ shiftFunction.id }}">
        <a href="#" onClick="grabNewShiftFunctionOrganizationForm({{shiftFunction.id}});">Add crew from an organization</a>
        </div>
        <div id="jobTable_{{ shiftFunction.id }}">
        </div>
        <div id="editShiftFunctionOrganization_{{ shiftFunction.id }}">
        </div>
        </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
