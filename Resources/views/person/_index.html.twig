<table id="sortable_table" class="table table-hover table-sm" data-order='[[ 0, "asc" ]]'>
<thead>
    <tr>
        <th>Name</th>
        <th>Functions</th>
        <th>Mobile</th>
        <th>Email</th>
        <th>Status</th>
        <th class="no-sort">
            <input onClick="return select_all_persons(this);" class="select_all_persons_checkbox" type="checkbox" name="select_all">
        </th>
    </tr>
</thead>
<tbody>
{% for person in people %}
    <tr>
        <td style="white-space:nowrap;" data-order="{{ person.lastname }}"><a href="{{ path('person_show', { 'id': person.id }) }}">{{ person.fullname }}</a></td>
        <td>
            {% for f in person.functions(function_type) %} {{ f.name }},{% endfor %}</td>
        <td>{{ person.mobilephonenumber }}</td>
        <td>{{ person.email }}</td>
        <td>
        {{ person.statelabel }}
        </td>
