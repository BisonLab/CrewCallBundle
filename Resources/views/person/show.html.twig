    if ($( "#functab div" ).length > 1) {
        return false;
    }
    url = "{{ path('function_picker', {'access': 'ajax' }) }}?person_id={{ person.id }}";
    $.get(url, function( data ) {
        $( "#functab" ).html(data);
    }).done(function() {
        $( ".sfList" ).hide();
    });
    return false;
}

