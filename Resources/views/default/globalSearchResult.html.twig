{% extends "::base.html.twig" %}

{% block content %}

<h1>Searchresult</h1>

{% if zilch %}
<p>Sorry, nothing was found using <strong>{{ value }}</strong>
{% endif %}

{% if events | length > 0 %}
<h2>Events</h2>
<table id="sortable_table">
    <thead>
        <tr>
            <th>Name</th>
            <th>From</th>
            <th>To</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
    {% for event in events %}
        <tr>
            <td>
                <a href="{{ path('event_show', { 'id': event.id }) }}">{{ event.name }}</a>
            </td>
            <td>
                {{ event.description }}
            </td>
            <td>
                {{ event.fromtime }}
            </td>
            <td>
                {{ event.totime }}
            </td>
            <td>
                <a href="{{ path('location_show', { 'location': event.location.id }) }}">{{ event.location.name }}</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}

{% if persons | length > 0 %}
<h2>Persons</h2>
<table id="sortable_table" class="table table-striped  table-sm">
        <thead class="thead-inverse">
        <tr>
            <th>Name</th>
            <th>Mobile Phone Number</th>
        </tr>
    </thead>
    <tbody>
    {% for person in persons %}
        <tr>
            <td>
                <a href="{{ path('person_show', { 'id': person.id }) }}">{{ person.fullname }}</a>
            </td>
            <td>
                {{ person.mobilephonenumber }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}

{% if locations | length > 0 %}
<h2>Locations</h2>
<table id="sortable_table" class="table table-striped  table-sm">
        <thead class="thead-inverse">
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
    {% for location in locations %}
        <tr>
            <td>
                <a href="{{ path('location_show', { 'id': location.id }) }}">{{ location.name }}</a>
            </td>
            <td>
                {{ location.description }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}

{% if organizations | length > 0 %}
<h2>Organizations</h2>
<table id="sortable_table" class="table table-striped  table-sm">
        <thead class="thead-inverse">
        <tr>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
    {% for organization in organizations %}
        <tr>
            <td>
                <a href="{{ path('organization_show', { 'id': organization.id }) }}">{{ organization.name }}</a>
            </td>
            <td>
                {{ organization.officeemail }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}

{% endblock %}
