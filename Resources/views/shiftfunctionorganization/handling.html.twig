<script>

function grabShiftFunctionOrganizationOrganizationList(shiftfunction_id) {
    url = "{{ path('shiftfunctionorganization_index', {'access': 'ajax' }) }}" 
        + "?shift=" + shiftfunction_id;
    $.get(url, function( data ) {
        $( "#sfoTable_" + shiftfunction_id ).html(data);
        $( "#sfoList_" + shiftfunction_id ).show();
    }).done(function() {
        $( ".sfoList" ).each(function() {
            $(this).hide();
        });
    });
    return false;
}

function submitNewShiftFunctionOrganizationForm(shiftfunction_id) {
    $.ajax({
        beforeSend: function(req) {
          req.setRequestHeader("Accept", "application/json");
        },
        type: "POST",
        url: "{{ path('shiftfunctionorganization_new', { 'access': 'ajax' }) }}",
        data: $( "#newShiftFunctionOrganizationForm" ).serialize(),
        dataType: "text",
        async: true,
      }).done( function( cont, textStatus, xhr ) {
            if (xhr.status == 201) {
                // Gotta reload. Easiest way to recount everything.
                parent.location.reload();
            } else {
                $( "#newShiftFunctionOrganization_"+shiftfunction_id ).html(xhr.responseText);
            }
      }).fail(function(xhr, status, error) {
            errmsg = "Message sending failed\n";
            errmsg = errmsg + xhr.responseText + "\n";
            alert(errmsg);
    });
    return false;
}

function grabNewShiftFunctionOrganizationForm(shiftfunction_id) {
    url = "{{ path('shiftfunctionorganization_new', { 'access': 'ajax' }) }}";
    if (shiftfunction_id) {
        url = url + "?shiftfunction=" + shiftfunction_id;
    }
    $.get(url, function( data ) {
        $( "#newShiftFunctionOrganization_"+shiftfunction_id ).html(data);
        $( "#crewcallbundle_shiftfunctionorganization_shift_function" ).prev().hide();
        $( "#crewcallbundle_shiftfunctionorganization_shift_function" ).hide();
        $( "#newShiftFunctionOrganization_"+shiftfunction_id ).submit(function( event ) {
            event.preventDefault();
            submitNewShiftFunctionOrganizationForm(shiftfunction_id);
        });
    });
    return false;
}

function submitEditShiftFunctionOrganizationForm(shiftfunction_id) {
    orgurl = "{{ path('shiftfunctionorganization_edit', { 'access': 'ajax' }) }}";
    url = orgurl.replace("0", shiftfunction_id);
    $.ajax({
        beforeSend: function(req) {
          req.setRequestHeader("Accept", "application/json");
        },
        type: "POST",
        url: url,
        data: $( "#editShiftFunctionOrganizationForm" ).serialize(),
        dataType: "text",
        async: true,
      }).done( function( cont, textStatus, xhr ) {
        $( "#editShiftFunctionOrganization_"+shiftfunction_id ).html("");
        grabShiftFunctionOrganizationList(shiftfunction_id);
      }).fail(function(xhr, status, error) {
            errmsg = "Message sending failed\n";
            errmsg = errmsg + xhr.responseText + "\n";
            alert(errmsg);
    });
    return false;
}

function grabEditShiftFunctionOrganizationForm(shiftfunction_id) {
    orgurl = "{{ path('shiftfunctionorganization_edit', { 'access': 'ajax' }) }}";
    url = orgurl.replace("0", shiftfunction_id);
    $.get(url, function( data ) {
        $( "#editShiftFunctionOrganization_"+shiftfunction_id ).html(data);
        $( "#editShiftFunctionOrganizationForm" ).submit(function( event ) {
            event.preventDefault();
            submitEditShiftFunctionOrganizationForm(shiftfunction_id);
        });
    });
    return false;
}

</script>
