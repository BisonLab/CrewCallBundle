{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
    <div class="col-sm-6">
    <h1>Locations</h1>
    </div>
    <div class="col-sm-4">
    </div>
    <div class="col-sm-1" style="margin-top: 10px;">
    <a href="{{ path('location_new') }}"><button class="btn btn-dark mt-4 ml-3">New Location</button></a>
    </div>
    </div>

        <table id="sortable_table" class="table table-striped  table-sm">
        <thead class="thead-inverse">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td><a href="{{ path('location_show', { 'id': location.id }) }}">{{ location.name }}</a></td>
                <td>{{ location.description }}</td>
                <td>
                 <a href="{{ path('location_show', { 'id': location.id }) }}">show</a><br>
                 <a href="{{ path('location_edit', { 'id': location.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
