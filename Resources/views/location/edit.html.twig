{% extends 'base.html.twig' %}

{% block title %}Edit {{ location }}{% endblock %}
{% block body %}
    <h1>Location edit</h1>

    {{ form_start(edit_form, {'style': 'horizontal'}) }}
        {{ form_widget(edit_form) }}
        <input class="btn-sm btn-dark" type="submit" value="Save" />
    {{ form_end(edit_form) }}
    <a href="{{ path('location_show', { 'id': location.id }) }}" class="btn-sm btn-dark">Cancel</a>
{% endblock %}
