{% macro list_joblogs(jobloglist) %}
    <table class="table  table-sm">
    <th>In</th><th>Out</th><th>Break</th><th>Time</th><th>&nbsp;</th>
    {% for elem in jobloglist %}
    <tr>
    <td>{{ elem.in | date("Y-m-d H:i") }}</td>
    <td>{{ elem.out | date("Y-m-d H:i") }}</td>
    <td>{{ elem.breakminutes }}</td>
    <td>{{ elem.workedtime }}</td>
    <td>
    <a href="#!" id="editJobLog_{{ elem.id }}" data-html="true" onClick="return grabEditJobLogForm({{ elem.id }}, {{ elem.job.shift.id }});">Edit</a><br>
    <a href="#!" id="deleteJobLog_{{ elem.id }}" data-html="true" onClick="return deleteJobLog({{ elem.id }}, {{ elem.job.shift.id }});">Delete</a><br>
    </td>
    </tr>
    {% endfor %}
    </table>
{% endmacro %}
