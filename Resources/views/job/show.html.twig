{% extends 'base.html.twig' %}

{% block body %}
    <h1>Job</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ job.amount }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('job_index') }}" class="btn btn-sm btn-dark">Cancel</a><br>
    <a href="{{ path('job_edit', { 'id': job.id }) }}" class="btn btn-sm btn-dark">Edit</a><br>
    {{ form_start(delete_form) }}
        <input type="submit" value="Delete">
    {{ form_end(delete_form) }}
{% endblock %}
