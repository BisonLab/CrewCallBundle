<div class="row"> 
  <div class="col-sm-4"> 
    <table class="showTable">
        <tbody>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
{% if event.organization is not null %}
            <tr>
                <th>Organization</th>
                <td>
                    <a href="{{ path('organization_show', { 'id': event.organization.id }) }}">{{ event.organization.name }}</a>
                </td>
            </tr>
{% endif %}
{% if event.location is not null %}
            <tr>
                <th>Location</th>
                <td>
                    <a href="{{ path('location_show', { 'id': event.location.id }) }}">{{ event.location.name }}</a>
                </td>
            </tr>
{% endif %}
            <tr>
                <th>Contacts</th>
                <td>
{% for pfe in event.personfunctionevents() %}
   {{ pfe.person }}{% if pfe.person.mobilephonenumber %} - {{ pfe.person.mobilephonenumber }}{% endif %}
   <a href="{{ path('event_remove_contact', { 'id': pfe.id }) }}"><span class="remove_glyph"></span></a>
<br />
{% endfor %}
{% if add_contact_form is not null %}
    <a href="#" id="addContactLink" onClick="return openAddContact({{ event.id }});">Add</a>
{% endif %}
                </td>
            </tr>
            <tr>
                <th>&nbsp;</th>
                <td>
                </td>
            </tr>
            <tr>
                <th>&nbsp;</th>
            </tr>
        </tbody>
    </table>
  </div>
  <div class="col-sm-4 tabbable"> 
      <ul class="nav nav-tabs">
      <li class="active">
      <a href="#notestab_{{ event.id }}" data-toggle="tab">Notes</a>
      </li>
      <li>
      <a href="#checkstab_{{ event.id }}" data-toggle="tab">Checks</a>
      </li>
      <li>
      <a href="#filestab_{{ event.id }}" data-toggle="tab">Files</a>
      </li>
      </ul>

      <div class="tab-content ">

      <div class="tab-pane active" id="notestab_{{ event.id }}">
        <br>
        {% set mconf = {'mconfig': {
                'formname': 'eventnote_' ~ event.id,
                'reload_after_post': true,
                'subject': "",
                'to_type': "NONE",
                'from_type': "NONE",
                'message_type': 'Note',
                'submit': 'Save',
                'context': {
                    'system': 'crewcall',
                    'object_name': 'event',
                    'external_id': event.id
                    }
                }
            }
        %}
        {% include 'BisonLabSakonninBundle:Message:_create_popup.html.twig' with mconf %}
        <p>
        <a href="#" onClick='return createMessage("eventnote_{{ event.id }}");'>Add information</a>
        </p>
        <p>
        {% set mlogcontext = {
                    'system': 'crewcall',
                    'object_name': 'event',
                    'message_group': 'Notes',
                    'external_id': event.id
            }
        %}
        {% for note in sakonnin_messages.MessagesForContext(mlogcontext) %}
            {% set mdelform = sakonnin_messages.getCreateDeleteForm(note, true) %}
            <form method="POST" action="{{ path('message_delete', { 'id': note.id, 'access': 'web' }) }}">
            {{ form_start(mdelform) }}
            {{ form_rest(mdelform) }}
            <strong>{{ note.subject }}</strong> ({{ note.messagetype }})
            <button type="submit" class="btn btn-link"> <span class="remove_glyph" type="submit" name="submit" value="Delete"></span></button>
            </form>
            <pre>{{ note.body }}</pre>
        {% endfor %}
        </p>
      </div>
      <div class="tab-pane" id="checkstab_{{ event.id }}">
      <br>
        {% set mconf = {'mconfig': {
                'formname': 'eventinformheck_' ~ event.id,
                'reload_after_post': true,
                'message_type': 'InformCheck',
                'submit': 'Save',
                'context': {
                    'system': 'crewcall',
                    'object_name': 'event',
                    'external_id': event.id
                    }
                }
            }
        %}
        {% include 'BisonLabSakonninBundle:Message:_create_check.html.twig' with mconf %}
       <p>
        <a href="#" onClick='return createCheck("eventinformheck_{{ event.id }}");'>Add an information checkbox</a><br />
        </p>
        {% set mconf = {'mconfig': {
                'formname': 'eventconfirmcheck_' ~ event.id,
                'reload_after_post': true,
                'message_type': 'ConfirmCheck',
                'submit': 'Save',
                'context': {
                    'system': 'crewcall',
                    'object_name': 'event',
                    'external_id': event.id
                    }
                }
            }
        %}
        {% include 'BisonLabSakonninBundle:Message:_create_check.html.twig' with mconf %}
       <p>
        <a href="#" onClick='return createCheck("eventconfirmcheck_{{ event.id }}");'>Add a confirm checkbox</a><br />
        </p>
        {% set mlogcontext = {
                    'system': 'crewcall',
                    'object_name': 'event',
                    'message_types': ['ConfirmCheck', 'InformCheck'],
                    'external_id': event.id
            }
        %}
        {% for note in sakonnin_messages.MessagesForContext(mlogcontext) %}
            {% set mdelform = sakonnin_messages.getCreateDeleteForm(note, true) %}
            <form method="POST" action="{{ path('message_delete', { 'id': note.id, 'access': 'web' }) }}">
            {{ form_start(mdelform) }}
            {{ form_rest(mdelform) }}
            {{ note.messagetype }}
            <button type="submit" class="btn btn-link"> <span class="remove_glyph" type="submit" name="submit" value="Delete"></span></button>
            </form>
            <ul>
            <li><strong>{{ note.body }}</strong></li>
            </ul>
        {% endfor %}
        <br>
      </div>

      <div class="tab-pane" id="filestab_{{ event.id }}">
        <br>
        {% set sfconf = {'sfconfig': {
                'file_type': "AUTO",
                'formname': 'eventfiles_' ~ event.id,
                'reload_after_post': true,
                'context': {
                    'system': 'crewcall',
                    'object_name': 'event',
                    'external_id': event.id
                    }
                }
            }
        %}
        {% include 'BisonLabSakonninBundle:SakonninFile:_create_popup.html.twig' with sfconf %}
        <p>
          <a href="#" onClick="return uploadFile('eventfiles_{{ event.id }}');">Add a file</a><br />
        </p>
        {% set filecontext = {
                    'system': 'crewcall',
                    'object_name': 'event',
                    'external_id': event.id
            }
        %}
        {% include 'CrewCallBundle::_files.html.twig' with filecontext %}
      </div>
  </div>

  </div>
  <div class="col-sm-4" align="right"> 
    <ul>
        <li>
    {% if event.shifts | length > 0 %}
            {% set last_shift = event.shifts | last %}
            <a href="#" onClick="return grabNewShiftForm({{ event.id }}, {{ last_shift.id }});">Add shift</a>
    {% else %}
            <a href="#" onClick="return grabNewShiftForm({{ event.id }});">Add shift</a>
    {% endif %}
        </li>
        <li>
            <a href="#" onClick="return openPrintEventWindow({{ event.id }}, 'CONFIRMED');">Print</a>
        </li>
        <li>
            <a href="{{ path('event_edit', { 'id': event.id }) }}">Edit</a>
        </li>
        <li>
            <a href="#" title="Log" id="popLogSummary_event_{{ event.id }}" onClick="return popLogSummary('event', {{ event.id }});">Changelog</a>
        </li>
        <li>
            <a href="#" onClick="return openMessageToEventModal('event', {{ event.id }});">Send a message</a>
        </li>
    {% if not event.done %}
       <li>
        <a href="#" onClick="return submitStateForm({{ event.id}}, 'CONFIRMED');">
        {% set shiftsclosed = false %}
        {% for sh in event.shifts %}
            {% if not sh.open %}
                {% set shiftsclosed = true %}
            {% endif %}
        {% endfor %}
        {% if event.open and shiftsclosed %}
            Open all shifts for registration
        {% elseif not event.open and event.booked %}
            Reopen event
        {% elseif not event.open and event.shifts | length > 0 %}
            Confirm and open event for registration
        {% endif %}
        </a>
       </li>
        {% if event.end < date() %}
        <li>
            <a href="#" onClick="return submitStateForm({{ event.id }}, 'COMPLETED');">Set Completed</a>
        </li>
       {% elseif event.open and event.shifts | length > 0 %}
        <li>
            <a href="#" onClick="return submitStateForm({{ event.id }}, 'READY');">Set Ready and close all shifts</a>
        </li>
       {% endif %}
    {% endif %}

    {% if event.deleteable %}
        <li>
            <a href="#" onClick="return submitDeleteForm({{ event.id}});">Delete</a>
        </li>
    {% endif %}
    </ul>

   </div> <!-- col-sm-2 -->
</div> <!-- / row -->

<strong>Select all:  </strong><input onClick="return select_all_jobs({{ event.id }}, this);" class="select_all_persons_checkbox" type="checkbox" name="select_all">
<div id="shiftList_{{ event.id}}">
  {% include 'CrewCallBundle:shift:_index.html.twig' with { 'event': event}  %}
</div>

<button class="btn btn-sm btn-dark" id="message_modal_link" onClick="return openMessageToJobsModal({{ event.id }});">Send a message to selected</button>

<div id="function_select_{{ event.id }}" class="hidden">
<label>Function</label>
<select name="function_id">
  <option value="" selected>All</option>
{% for f in event.distinctshiftfunctions %}
  <option value="{{ f.id }}">{{ f.name }}</option>
{% endfor %}
</select>
</div>
