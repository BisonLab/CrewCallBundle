{% extends 'base.html.twig' %}

{% block body %}
    <h1>Events list</h1>

    <p><a href="{{ path('event_new') }}"><button class="btn btn-primary">Create a new event</button></a></p>

    <table id="sortable_table" class="table table-striped table-sm">
        <thead class="thead-inverse">
            <tr>
                <th>When</th>
                <th>Main Event</th>
                <th>Location</th>
                <th>State</th>
                <th>Amounts</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td data-order="{{ event.start | date('U')}}" >
                    {{ event.start|date('Y-m-d H:i') }}
                    {% if event.end %}
                        {%  if event.end | date('Y-m-d') == event.start | date('Y-m-d') %}
                        {{ event.end|date('H:i') }}
                        {% else %}
                            {{ event.end | date('Y-m-d H:i') }}
                        {% endif %}
                    {% endif %}
                </td>
                <td>
                <a href="{{ path('event_show', { 'id': event.id }) }}">{{ event.mainevent }}</a>
                {% for child in event.children %}
                    <br> * <a href="{{ path('event_show', { 'id': child.id }) }}">{{ child.name }}</a>
                {% endfor %}
                </td>
                <td>{{ event.location }}</td>
                <td>{{ event.state }}</td>
                <td>
                {% set amounts = event.jobsamountbystate %}
                <span class="ccAmount ccNeeded">{{ event.totalamountneeded }}</span>
                <span class="ccAmount ccConfirmed">{{ amounts.CONFIRMED }}</span>
                <span class="ccAmount ccAssigned">{{ amounts.ASSIGNED }}</span>
                <span class="ccAmount ccInterested">{{ amounts.INTERESTED }}</span>
                </td>
                <td>
                <a href="{{ path('event_show', { 'id': event.id }) }}">show</a><br>
                <a href="{{ path('event_edit', { 'id': event.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
