{% extends 'base.html.twig' %}

{% block body %}
<script>
$(document).ready(function()
    {
    $("#crewcallbundle_event_start_date input").each(function(){
        $(this).attr("readonly","readonly");
    });
    $("#crewcallbundle_event_end_date input").each(function(){
        $(this).attr("readonly","readonly");
    });
});
</script>
{% if event.parent %}
    <h1>Add subevent to {{ event.parent }}</h1>
{% else %}
    <h1>New Event</h1>
{% endif %}

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create"/>
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('event_index') }}">Cancel</a>
        </li>
    </ul>
{% endblock %}
